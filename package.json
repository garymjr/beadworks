{
  "name": "beadworks-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --watch ./packages/server/src/index.ts",
    "dev:ui": "bun run --filter @beadworks/ui dev",
    "dev:all": "concurrently \"bun run --watch ./packages/server/src/index.ts\" \"bun run --filter @beadworks/ui dev\" --names \"SERVER,UI\" --prefix-colors \"blue,green\"",
    "build": "bun run --filter @beadworks/ui build",
    "preview": "bun run --filter @beadworks/ui preview",
    "test": "bun run --filter @beadworks/ui test",
    "lint": "bun run --filter @beadworks/ui lint",
    "format": "bun run --filter @beadworks/ui format",
    "check": "bun run --filter @beadworks/ui check"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.5.3",
    "typescript": "^5.7.2"
  }
}
